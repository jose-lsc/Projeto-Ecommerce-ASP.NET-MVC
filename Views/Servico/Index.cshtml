@model List<ServicoModel>

@{
    ViewData["Title"] = "Serviços";
}


<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Servico"
           asp-action="Criar">Adicionar Serviço</a>
    </div>
    @if (TempData["msgSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["msgSucesso"]
        </div>
    }
    @if (TempData["msgErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["msgErro"]
        </div>
    }

    <h1 class="display-4">Serviços: </h1>


<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Descrição</th>
            <th scope="col">Preço</th>
            <th scope="col">Tipo</th>
            <th scope="col">Up</th>
            <th scope="col">Down</th>
        </tr>
    </thead>
    <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var lista in Model)
                {
                    <tr>
                        <th scope="row">@lista.Id</th>
                        <td>@lista.Descricao</td>
                        <td>@lista.Preco</td>
                        <td>@lista.Tipo</td>
                        <td>@lista.Up</td>
                        <td>@lista.Down</td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-success" asp-route-id="@lista.Id" asp-controller="Servico" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@lista.Id" asp-controller="Servico" asp-action="ApagarConfirmacao">Apagar</a>
                                <a role="button" class="btn btn-primary" asp-route-id="@lista.Id" asp-controller="" asp-action="">+Carrinho</a>
                            </div>
                        </td>
                    </tr>
                }
            }

        
    </tbody>
</table>
</div>