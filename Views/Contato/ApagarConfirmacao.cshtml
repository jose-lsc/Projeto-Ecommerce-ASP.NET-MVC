@model ContatoModel

@{
    ViewData["Title"] = "Deletar";
}
<div>
    <h3>Deseja Apagar o contato @Model.Contato?</h3>
</div>
<form asp-controller="Contato" asp-action="ApagarController" method="post">
    <input type="hidden"  asp-for="@Model.Id"/>
    <button type="submit"  class="btn btn-primary" >Sim</button>
</form>

<a class="btn btn-danger" asp-controller="Contato" asp-action="Index">Não</a>