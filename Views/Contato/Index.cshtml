@model List<ContatoModel>
@{
    ViewData["Title"] = "Contatos";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Contato"
           asp-action="Criar">Adicionar novo contato</a>
    </div>

    @if (TempData["msgSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["msgSucesso"]
        </div>
    }
    @if (TempData["msgErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["msgErro"]
        </div>
    }
    <h1 class="display-4">Contatos: </h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Contato</th>
                <th scope="col">Tipo do Contato</th>
                
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var lista in Model)
                {
                    <tr>
                        <th scope="row">@lista.Id</th>
                        <td>@lista.Contato</td>
                        <td>@lista.Tipo_contato</td>
                        
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-success" asp-route-id="@lista.Id" asp-controller="Contato" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@lista.Id" asp-controller="Contato" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
           
            
        </tbody>
    </table>
    
</div>
